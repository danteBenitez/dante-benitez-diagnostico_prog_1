<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
</head>
<body>
    <h1><%= title %></h1>
    <main>
        <ul>
                <% for (const { id, title, description, author } of posts) { %>
                    <li>
                        <span>
                            <%= id %>
                        </span>
                        <h3>
                            <%= title %>
                        </h3>
                        <p>
                            <%= description %>
                        </p>
                        <span><i>Por <%= author %></i></span>
                    </li>
            <% } %>
        </ul>
    </main> 
</body>
</html>